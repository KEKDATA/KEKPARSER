{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "target": "es2018",
    "baseUrl": "./src",
    "lib": ["es2019", "es2018", "es6", "es2017", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
